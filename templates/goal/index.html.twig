{% extends 'base.html.twig' %}

{% block title %}Mes Objectifs{% endblock %}

{% block body %}
    <main class="container-fluid mb-2">
    <h2>Mes Objectifs</h2>
    <section class="module mb-2">
        <h3>En cours</h3>
        {% for goal in userGoals.goals %}
    <div class="card mb-2 text-center {{ goal.section.name }}">
            <strong class="card-title"><i class="mr-2 {{ goal.section.icon }}"></i>{{ goal.section.name }}</strong>
            <p class="card-subtitle mb-2">{{ goal.name }}</p>
        <div> <i class="far fa-grin"></i></div>
    </div>
        {% endfor %}
    </section>
    <section class="module">
