{% extends 'base.html.twig' %}

{% block title %}Mes Objectifs{% endblock %}

{% block body %}
    <main class="container-fluid mb-2">
    <h2>Mes Objectifs</h2>
    <section class="module mb-2">
        <h3>En cours</h3>
{% for goal in goals %}
    <div class="card mb-2 text-center {{ goal.section.name }}">
            <strong class="card-title"><i class="mr-2 {{ goal.section.icon }}"></i>{{ goal.section.name }}</strong>
            <p class="card-subtitle mb-2">{{ goal.name }}</p>
        <div> <i class="far fa-grin"></i></div>
    </div>
        {% endfor %}
    </section>
    <section class="module">
        <h3>Définir d'autres objectifs</h3>
        {% for goalSection in goalSectionRepository %}
        <div class="card mb-2 text-center {{ goalSection.name }}">
            <strong>{{ goalSection.name }}</strong>
            <ul>
                {% for goal in goalSection.goals %}
                    <a href="">{{ goal.name }}</a>
                {% endfor %}
            </ul>
        </div>
        {% endfor %}
        <div class="card mb-2 text-center">
            <strong>Créer son objectif</strong>
        </div>
    </section>
    </main>
{% endblock %}